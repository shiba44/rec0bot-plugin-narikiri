{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "outDir": "./",
        "strict": true,
        "types": ["node"],
        "allowSyntheticDefaultImports": true,
        "rewriteRelativeImportExtensions": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
